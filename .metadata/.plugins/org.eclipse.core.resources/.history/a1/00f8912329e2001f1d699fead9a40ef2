<?php
class Punto {
    //Constructor
    public function __construct(
        int $x=0,
        int $y=0        
        ){
            $this->x=$x;
            $this->y=$y;
            
    }
    //Metodo mover
    public function mover(int$dx=0, int $dy=0):void{
        $this->x=$dx;
        $this->y=$dy;
        
    }
    
    //Metodo a origen
    public function aOrigen():void{
        $this->x=0;
        $this->y=0;        
    }
    
    //metodo toString
    public function __toString () {
        return "($this->x, $this->y)";
    }
    
}