<?php
class Perro{
    
    //Constructor
    public function __construct(
      public string $nombre,
      public string $raza,
      public float $peso=0
    ){ }

    //metodo ladrar
    public function ladrar(){
        echo "GUAU GUAU";
    }
    
    //Metodo engordar
    public fn engordar(float $peso=0){
        $this->peso += $peso;
    }
            
    //metodo toString
    public function __toString () {
            return "PERRO: $this->nombre $this->raza $this->peso";
        }
        
}
